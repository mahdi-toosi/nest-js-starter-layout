{
	"name": "zciti-test",
	"version": "0.0.1",
	"description": "",
	"author": "mahdi toosi",
	"private": true,
	"license": "MIT",
	"engines": {
		"node": ">=18.0.0",
		"yarn": ">=1.22.0",
		"npm": "please-use-yarn"
	},
	"scripts": {
		"build": "nest build",
		"format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
		"start": "nest start",
		"dev": "nest start --watch",
		"start:debug": "nest start --debug --watch",
		"start:prod": "node dist/apps/root/main",
		"lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
		"test": "jest",
		"format:fix": "prettier -u --write .",
		"production:build": "yarn prisma:generate && yarn migrate:deploy && nest build",
		"test:watch": "jest --watch",
		"test:cov": "jest --coverage",
		"test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
		"test:e2e": "jest --config apps/root/test/jest-e2e.json",
		"db": "ts-node scripts/db.ts",
		"prepare": "husky install"
	},
	"dependencies": {
		"@nestjs/common": "^9.0.0",
		"@nestjs/config": "^2.3.1",
		"@nestjs/core": "^9.0.0",
		"@nestjs/jwt": "^10.0.3",
		"@nestjs/mapped-types": "*",
		"@nestjs/passport": "^9.0.3",
		"@nestjs/platform-express": "^9.0.0",
		"@nestjs/swagger": "^6.1.4",
		"@prisma/client": "^4.12.0",
		"bcryptjs": "^2.4.3",
		"class-transformer": "^0.5.1",
		"class-validator": "^0.14.0",
		"helmet": "^6.1.5",
		"joi": "^17.9.1",
		"nest-access-control": "^2.2.0",
		"nestjs-prisma-crud": "^1.0.0-beta.16",
		"passport": "^0.6.0",
		"passport-jwt": "^4.0.1",
		"passport-local": "^1.0.0",
		"prisma": "^4.12.0",
		"reflect-metadata": "^0.1.13",
		"rxjs": "^7.2.0",
		"swagger-ui-express": "^4.6.0"
	},
	"devDependencies": {
		"@commitlint/cli": "^17.6.3",
		"@commitlint/config-conventional": "^17.6.3",
		"@faker-js/faker": "^7.6.0",
		"@nestjs/cli": "^9.0.0",
		"@nestjs/schematics": "^9.0.0",
		"@nestjs/testing": "^9.0.0",
		"@types/bcryptjs": "^2.4.2",
		"@types/express": "^4.17.13",
		"@types/jest": "29.2.4",
		"@types/node": "18.11.18",
		"@types/passport-jwt": "^3.0.8",
		"@types/passport-local": "^1.0.35",
		"@types/supertest": "^2.0.11",
		"@typescript-eslint/eslint-plugin": "^5.0.0",
		"@typescript-eslint/parser": "^5.0.0",
		"dotenv-cli": "^7.0.0",
		"eslint": "^8.0.1",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-prettier": "^4.0.0",
		"husky": "^8.0.3",
		"jest": "29.3.1",
		"lint-staged": "^13.2.2",
		"nestjs-prisma-crud-schematics": "^1.0.0-beta.12",
		"prettier": "^2.3.2",
		"source-map-support": "^0.5.20",
		"supertest": "^6.1.3",
		"ts-jest": "29.0.3",
		"ts-loader": "^9.2.3",
		"ts-node": "^10.0.0",
		"tsconfig-paths": "4.1.1",
		"typescript": "^4.7.4"
	},
	"jest": {
		"moduleFileExtensions": [
			"js",
			"json",
			"ts"
		],
		"rootDir": ".",
		"testRegex": ".*\\.spec\\.ts$",
		"transform": {
			"^.+\\.(t|j)s$": "ts-jest"
		},
		"collectCoverageFrom": [
			"**/*.(t|j)s"
		],
		"coverageDirectory": "./coverage",
		"testEnvironment": "node",
		"roots": [
			"<rootDir>/apps/",
			"<rootDir>/libs/"
		],
		"moduleNameMapper": {
			"^@app/common(|/.*)$": "<rootDir>/libs/common/src/$1",
			"^@app/translated-validation-pipe(|/.*)$": "<rootDir>/libs/translated-validation-pipe/src/$1",
			"^@app/translated-class-validator(|/.*)$": "<rootDir>/libs/translated-class-validator/src/$1",
			"^@lib/translated-class-validator(|/.*)$": "<rootDir>/libs/translated-class-validator/src/$1"
		}
	}
}
